<h2 class="new-user-header">Create A New User Account</h2>

<form class="signup-form pure-form pure-form-stacked">
    <div>
        <label for="username-signup">Username:</label>
        <input type="text" class="form-input" id="username-signup">
    </div>
    <div>
        <label for="email-signup">Email:</label>
        <input type="text" class="form-input" id="email-signup">
    </div>
    <div>
        <label for="password-signup">Password:</label>
        <input type="text" class="form-input" id="password-signup">
    </div>
    <div>
        <button id="new-user" type="submit" class="pure-button pure-button-primary">Submit</button>
    </div>
</form>

<script src="/js/createUser.js"></script>