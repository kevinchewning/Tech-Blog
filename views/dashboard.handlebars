<div class="post-container">

    {{#if posts}}
    {{#each posts}}
    <div class="post-box" data-id="{{ id }}">
        <div class="title-bar">
            <h2 class="title">{{ title }}</h2>
            <h2 class="created-by">Created on {{ format_date created_at }}</h2>
            <div class="post-buttons">
                <button class="pure-button post-update" data-id="{{ id }}">Update</button>
                <button class="pure-button post-delete" data-id="{{ id }}">Delete</button>                
            </div>
        </div>
        <div class="content-box">
            <p class="content">{{ content }}</p>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="post-box">
        <div class="title-bar" id="no-posts-bar">
            <h2 class="title">You have not posted anything yet!</h2>
        </div>
    </div>
    {{/if}}

    <button class="pure-button" id="new-post-button">New Post</button>


</div>

<script src="/js/index.js"></script>
<script src="/js/deletePost.js"></script>
<script src="/js/updatePost.js"></script>