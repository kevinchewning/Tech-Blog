<div class="post-container">

    <form id="post-form" class="post-box">

        <label class="title-bar" for="post-title">Title:</label>
        <input id="new-post-title" value="{{ post.title }}">

        <label class="title-bar" for="post-content">Content:</label>
        <textarea class="textarea" id="post-content" name="post-content">{{ post.content }}</textarea>

        <button id="submit" class="pure-button pure-button-primary" type="submit" data-id="{{ post.id }}">Submit</button>

    </form>

</div>

<script src="/js/updatePost.js"></script>
